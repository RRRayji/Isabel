<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="UTF-8">
	<title>Isabel – Hand-made accessories in Italy</title>
	<link rel="icon" type="image/ico" href="/sprite/favicon.ico">
	<link rel="stylesheet" type="text/css" href="/css/index/index.css">
</head>
<body>
	<%- include('modules/header'); -%>

	<section class="categories">
		<p class="sectionName">Categories</p>
		<div class="sectionContent">
			<div class="sectionScroller">
				<a class="item" href="/catalog" id="catalog">
					<img src="picture/catalog.jpg" alt="Picture">
					<p class="itemName">📋Catalog</p>
				</a>
				<a class="item" href="/rings">
					<img src="picture/ring1-1.jpg" alt="Picture">
					<p class="itemName">💍Rings</p>
				</a>
				<a class="item" href="/earrings">
					<img src="/picture/earrings1-1.jpg" alt="Picture">
					<p class="itemName">🎊Earrings</p>
				</a>
				<a class="item" href="/pendants">
					<img src="/picture/pendant1-1.jpg" alt="Picture">
					<p class="itemName">📿Pendants</p>
				</a>
				<a class="item" href="/bracelets">
					<img src="/picture/bracelet1-1.jpg" alt="Picture">
					<p class="itemName">💫Bracelets</p>
				</a>
			</div>
		</div>
	</section>

	<section class="rings">
		<p class="sectionName">💍Rings</p>
		<div class="sectionContent">
			<div class="sectionScroller">
				<% catalog[0].forEach(function(rings){ %>
					<a class="item" href="/item?id=<%=rings.article%>,count=10">
						<img src="<%=rings.media%>" alt="Picture">
						<p class="price">€<%=rings.price%></p><br>
						<p class="itemName"><%=rings.title%></p>
					</a>
				<% }); %>
			</div>
		</div>
	</section>

	<section class="earrings">
		<p class="sectionName">🎊Earrings</p>
		<div class="sectionContent">
			<div class="sectionScroller">
				<% catalog[1].forEach(function(rings){ %>
					<a class="item" href="/item?id=<%=rings.article%>">
						<img src="<%=rings.media%>" alt="Picture">
						<p class="price">€<%=rings.price%></p><br>
						<p class="itemName"><%=rings.title%></p>
					</a>
				<% }); %>
			</div>
		</div>
	</section>

	<section class="earrings">
		<p class="sectionName">📿Pendants</p>
		<div class="sectionContent">
			<div class="sectionScroller">
				<% catalog[2].forEach(function(rings){ %>
					<a class="item" href="/item?id=<%=rings.article%>">
						<img src="<%=rings.media%>" alt="Picture">
						<p class="price">€<%=rings.price%></p><br>
						<p class="itemName"><%=rings.title%></p>
					</a>
				<% }); %>
			</div>
		</div>
	</section>

	<section class="bracelets">
		<p class="sectionName">💫Bracelets</p>
		<div class="sectionContent">
			<div class="sectionScroller">
				<% catalog[3].forEach(function(rings){ %>
					<a class="item" href="/item?id=<%=rings.article%>">
						<img src="<%=rings.media%>" alt="Picture">
						<p class="price">€<%=rings.price%></p><br>
						<p class="itemName"><%=rings.title%></p>
					</a>
				<% }); %>
			</div>
		</div>
	</section>

	<%- include('modules/footer') -%>
</body>
</html>